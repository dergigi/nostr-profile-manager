{
  "name": "nostr-profile-manager",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "esbuild src/index.ts --bundle --minify --sourcemap=external --outfile=dist/index.js",
    "build:css": "sass src/style.scss dist/style.css --style=compressed",
    "build:assets": "cp src/index.html dist/index.html && cp -r src/img dist/img",
    "build": "npm run clean && npm run build:js && npm run build:css && npm run build:assets",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "esbuild": "^0.17.8",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.3",
    "sass": "^1.58.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@picocss/pico": "^1.5.7",
    "isomorphic-dompurify": "^1.6.0",
    "nostr-tools": "^1.5.0",
    "timeago.js": "^4.0.2",
    "websocket-polyfill": "^0.0.3"
  }
}
